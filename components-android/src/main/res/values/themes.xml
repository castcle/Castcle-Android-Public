<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CastcleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_night</item>
        <item name="colorPrimaryVariant">@color/black_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="castclePrimaryColor">@color/black</item>
        <item name="castclePrimaryTextColor">@color/black</item>
        <item name="castcleSecondaryTextColor">@color/black</item>
        <item name="castclePrimarySelectedColor">@color/blue</item>
        <item name="bmBottomNavFeed">@drawable/ic_feed_selector</item>
        <item name="bmBottomNavCreate">@drawable/ic_create_content</item>
        <item name="bmBottomNavSearch">@drawable/ic_search_selector</item>
        <item name="castcleInputBackground">@drawable/bg_round_corner_input</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TextInput" >
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="TextInput.Text" parent="AppTextKanitLight.Small">
        <item name="android:textColorHint">@color/white_nobel</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="colorControlActivated">@color/red_primary</item>
    </style>

    <style name="TextInput.TextLayout">
        <item name="hintTextAppearance">@style/TextInput.HolderText</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="TextInput.HolderText" parent="AppTextKanit.xxSmall">
        <item name="android:textColor">@color/nobel_selector</item>
    </style>

    <style name="TextInput.TextError" parent="AppTextKanit.xSmall">
        <item name="android:textColor">@color/red_primary</item>
    </style>

</resources>
