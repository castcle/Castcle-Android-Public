<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/default_padding_margin_medium"
            android:layout_marginTop="@dimen/default_padding_margin_medium"
            android:layout_marginBottom="@dimen/default_padding_margin_medium"
            android:background="@drawable/ic_plachholder_avatar" />

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/default_padding_margin_medium"
            android:layout_marginTop="@dimen/default_padding_margin_medium"
            android:layout_marginBottom="@dimen/default_padding_margin_medium"
            android:background="@drawable/ic_plachholder_avatar" />

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/default_padding_margin_medium"
            android:layout_marginTop="@dimen/default_padding_margin_medium"
            android:layout_marginBottom="@dimen/default_padding_margin_medium"
            android:background="@drawable/ic_plachholder_avatar" />

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/default_padding_margin_medium"
            android:layout_marginTop="@dimen/default_padding_margin_medium"
            android:layout_marginBottom="@dimen/default_padding_margin_medium"
            android:background="@drawable/ic_plachholder_avatar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
