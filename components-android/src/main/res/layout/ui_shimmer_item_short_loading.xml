<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="?attr/colorPrimaryVariant">

    <View
        android:id="@+id/ivPerviewAvatar"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/bg_cover_round_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ivPerviewUserTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/bg_cover_round_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPerviewAvatar"
        app:layout_constraintTop_toTopOf="@id/ivPerviewAvatar" />

    <View
        android:id="@+id/ivPerviewUserSubTitle"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/bg_cover_round_circle"
        app:layout_constraintStart_toEndOf="@id/ivPerviewAvatar"
        app:layout_constraintTop_toBottomOf="@id/ivPerviewUserTitle" />

    <View
        android:id="@+id/ivPerviewContent"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/bg_cover_round_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivPerviewAvatar"
        app:layout_constraintTop_toBottomOf="@id/ivPerviewAvatar" />

    <View
        android:id="@+id/ivPerviewContent2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/bg_cover_round_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivPerviewAvatar"
        app:layout_constraintTop_toBottomOf="@id/ivPerviewContent" />

    <View
        android:id="@+id/ivPerviewContent3"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/bg_cover_round_circle"
        app:layout_constraintStart_toStartOf="@id/ivPerviewAvatar"
        app:layout_constraintTop_toBottomOf="@id/ivPerviewContent2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
