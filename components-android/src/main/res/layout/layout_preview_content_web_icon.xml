<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clInPreviewIconContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:background="@drawable/bg_cover_quote"
    app:layout_constraintBottom_toTopOf="@id/ftFooter"
    app:layout_constraintTop_toBottomOf="@id/tvFeedContent"
    tools:layout_editor_absoluteX="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPerviewIconUrl"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_img_placeholder" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanitLight.Small"
        android:id="@+id/tvPreviewIconMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/ivPerviewIconUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPerviewIconUrl"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="How does a blockchain work - Simply Explained" />

</androidx.constraintlayout.widget.ConstraintLayout>
