<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Castcle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_night</item>
        <item name="colorPrimaryVariant">@color/black_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/red_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="castclePrimaryColor">@color/black</item>
        <item name="castclePrimaryTextColor">@color/black</item>
        <item name="castcleSecondaryTextColor">@color/black</item>
        <item name="castclePrimarySelectedColor">@color/blue</item>
        <item name="bmBottomNavFeed">@drawable/ic_feed_selector</item>
        <item name="bmBottomNavCreate">@drawable/ic_create_content</item>
        <item name="bmBottomNavSearch">@drawable/ic_search_selector</item>
    </style>

    <style name="Theme.Castcle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Castcle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Castcle.SplashScreen" parent="Theme.Castcle">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogModal</item>
    </style>

    <style name="BottomSheetRecastDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheetRecastDialogModal</item>
    </style>

    <style name="BottomSheetDialogModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_onboard_greeting</item>
    </style>

    <style name="BottomSheetRecastDialogModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_onboard_greeting</item>
    </style>

    <style name="CastcleToolBar" parent="AppTextKanit.Regular">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ContentTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TextStyle</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@color/black_nero</item>
    </style>

    <style name="ContentTrendingTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TextStyle</item>
        <item name="tabTextColor">@color/gray</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@color/black_nero</item>
    </style>

    <style name="NotificationTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TextStyle</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="android:background">@color/black_light</item>
    </style>

    <style name="ContentToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="tabTextAppearance">@style/AppTheme.TextStyle</item>
        <item name="tabTextColor">@color/gray_light</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="indicatorInset">@color/transparent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTheme.TextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_CustomToolbarTheme">
        <item name="colorPrimary">@color/black_nero</item>
        <item name="colorPrimaryDark">@color/black_nero</item>
        <item name="colorAccent">@color/black_tranparen_80</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_castcle</item>
        <item name="windowSplashScreenBackground">@color/red_primary</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.Castcle</item>
    </style>
</resources>
